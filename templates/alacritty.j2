# vim: set filetype=yaml:
# ANSIBLE-MANAGED CONFIGURATION FILE
# Local config sample:
#   {{ alacritty_example_config_path }}
# Upstream config source:
#   https://github.com/alacritty/alacritty/blob/master/alacritty.yml

# shell to run inside of alacritty
shell:
  program: '{{ alacritty_shell_cmd }}'

window:
  # padding (in pixels) to put in between terminal text and window border
  padding:
    x: {{ alacritty_window_padding_pixels }}
    y: {{ alacritty_window_padding_pixels }}
  # show window borders, and show window title bar
  decorations: {{ 'full' if alacritty_show_window_borders_and_title_bar else 'none' }}
  # background opacity of the terminal window: 0.0 (transparent) to 1.0 (opaque)
  # NOTE: requires separate compositor application to be running
  opacity: {{ alacritty_term_colors.background.opacity }}

font:
  normal:
    family: '{{ alacritty_font_family }}'
  bold:
    family: '{{ alacritty_font_family }}'
    style:  '{{ alacritty_font_style_bold }}'
  italic:
    family: '{{ alacritty_font_family }}'
    style:  '{{ alacritty_font_style_italic }}'
  bold_italic:
    family: '{{ alacritty_font_family }}'
    style:  '{{ alacritty_font_style_bold_italic }}'
  size: {{ alacritty_font_size }}

colors:
  primary:
    background: '{{ alacritty_term_colors.background.bg }}'
    foreground: '{{ alacritty_term_colors.text.fg }}'
    bright_foreground: '{{ alacritty_term_colors.text.fg_bright }}'
  cursor:
    text: '{{ alacritty_term_colors.cursor.fg_text }}'
    cursor: '{{ alacritty_term_colors.cursor.bg }}'
  hints:
    start:
      foreground: '{{ alacritty_term_colors.urls.fg_text }}'
      background: '{{ alacritty_term_colors.urls.bg }}'
    end:
      foreground: 'CellForeground'
      background: 'CellBackground'
  normal:
    black:   '{{ alacritty_term_colors.black.color0_dimmed }}'
    red:     '{{ alacritty_term_colors.red.color1_dimmed }}'
    green:   '{{ alacritty_term_colors.green.color2_dimmed }}'
    yellow:  '{{ alacritty_term_colors.yellow.color3_dimmed }}'
    blue:    '{{ alacritty_term_colors.blue.color4_dimmed }}'
    magenta: '{{ alacritty_term_colors.magenta.color5_dimmed }}'
    cyan:    '{{ alacritty_term_colors.cyan.color6_dimmed }}'
    white:   '{{ alacritty_term_colors.white.color7_dimmed }}'
  bright:
    black:   '{{ alacritty_term_colors.black.color8_bright }}'
    red:     '{{ alacritty_term_colors.red.color9_bright }}'
    green:   '{{ alacritty_term_colors.green.color10_bright }}'
    yellow:  '{{ alacritty_term_colors.yellow.color11_bright }}'
    blue:    '{{ alacritty_term_colors.blue.color12_bright }}'
    magenta: '{{ alacritty_term_colors.magenta.color13_bright }}'
    cyan:    '{{ alacritty_term_colors.cyan.color14_bright }}'
    white:   '{{ alacritty_term_colors.white.color15_bright }}'

cursor:
  shape: '{{ alacritty_cursor_shape }}'
  blinking: '{{ alacritty_cursor_blink }}'
  blink_interval: {{ alacritty_cursor_blink_interval_ms }}
  unfocused_hollow: {{ 'true' if alacritty_show_hollow_cursor_on_unfocus else 'false' }}

# visual warning bell
bell:
  duration: {{ alacritty_visual_bell_duration_ms }}
  color: '{{ alacritty_term_colors.visual_bell.bg }}'

# follow-url hint mode
hints:
  alphabet: '{{ alacritty_link_hint_chars }}'
  enabled:
    - regex: "(ipfs:|ipns:|magnet:|mailto:|gemini:|gopher:|https:|http:|news:|file:|git:|ssh:|ftp:)\
              [^\u0000-\u001F\u007F-\u009F<>\"\\s{-}\\^⟨⟩`]+"
      command: '{{ alacritty_url_hint_mode_cmd }}'
      post_processing: true
      mouse:
        enabled: true
        mods: None
      binding:
        key: {{ alacritty_keymap_toggle_url_hint_mode.key }}
        mods: {{ alacritty_keymap_toggle_url_hint_mode.mods }}

# NOTE: 'ReceiveChar' is a no-op that passes the keypresses into terminal
key_bindings:
  # clear screen and UI warnings
  - { key: {{ alacritty_keymap_clear_screen_ui.key }}, mods: {{ alacritty_keymap_clear_screen_ui.mods }}, action: ClearLogNotice }
  - { key: {{ alacritty_keymap_clear_screen_ui.key }}, mods: {{ alacritty_keymap_clear_screen_ui.mods }}, mode: ~Vi|~Search, chars: "\x0c" }
  # scrolling
  - { key: {{ alacritty_keymap_scroll.page_up.key }}, mods: {{ alacritty_keymap_scroll.page_up.mods }}, mode: ~Alt, action: ScrollPageUp }
  - { key: {{ alacritty_keymap_scroll.page_down.key }}, mods: {{ alacritty_keymap_scroll.page_down.mods }}, mode: ~Alt, action: ScrollPageDown }
  - { key: {{ alacritty_keymap_scroll.top.key }}, mods: {{ alacritty_keymap_scroll.top.mods }}, mode: ~Alt, action: ScrollToTop }
  - { key: {{ alacritty_keymap_scroll.bottom.key }}, mods: {{ alacritty_keymap_scroll.bottom.mods }}, mode: ~Alt, action: ScrollToBottom }
  #  Vi Mode (disable it)
  - { key: Space, mods: Shift|Control, mode: ~Search, action: ReceiveChar }
  #  Search Mode (disable it)
  - { key: F, mods: Control|Shift, mode: ~Search, action: ReceiveChar }
  - { key: B, mods: Control|Shift, mode: ~Search, action: ReceiveChar }
  #  copy and paste selected text
  - { key: {{ alacritty_keymap_copy_text.key }}, mods: {{ alacritty_keymap_copy_text.mods }}, action: Copy }
  - { key: {{ alacritty_keymap_paste_text.key }}, mods: {{ alacritty_keymap_paste_text.mods }}, mode: ~Vi, action: Paste }
  - { key: Insert, mods: Shift, action: ReceiveChar }
  # increase and decrease font size
  - { key: {{ alacritty_keymap_increase_font_size.key }}, mods: {{ alacritty_keymap_increase_font_size.mods }}, action: IncreaseFontSize }
  - { key: {{ alacritty_keymap_decrease_font_size.key }}, mods: {{ alacritty_keymap_decrease_font_size.mods }}, action: DecreaseFontSize }
  - { key: {{ alacritty_keymap_reset_font_size.key }}, mods: {{ alacritty_keymap_reset_font_size.mods }}, action: ResetFontSize }

